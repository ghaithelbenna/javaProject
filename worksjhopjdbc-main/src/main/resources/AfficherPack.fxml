<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<BorderPane prefHeight="723.0" prefWidth="1550.0" stylesheets="stylepack.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AfficherPackController">
   <left>
      <VBox prefHeight="678.0" prefWidth="657.0">
         <children>
            <HBox prefHeight="678.0" prefWidth="657.0">
               <children>
                  <AnchorPane prefHeight="100.0" prefWidth="300.0">
                     <children>
                        <TextField fx:id="searchField" onKeyReleased="#search" />
                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0" spacing="5">
                           <children>
                              <RadioButton fx:id="prixRadioButton" onAction="#triParPrix" text="Trier par Prix" />
                              <RadioButton fx:id="dateRadioButton" onAction="#triParDate" text="Trier par Date" />
                              <RadioButton fx:id="disponibiliteRadioButton" onAction="#triParDisponibilite" text="Trier par Disponibilité" />
                              <Button fx:id="statistiqueButton" onAction="#Statistique" text="Statistique" />
                              <Button fx:id="genererPDFButton" onAction="#genererPDF" text="Générer PDF" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>


                  <AnchorPane prefHeight="678.0" prefWidth="448.0">
                     <children>
                        <VBox prefHeight="678.0" prefWidth="1358.0" styleClass="vbox-content">
                           <!-- Entête -->
                           <HBox prefHeight="21.0" prefWidth="922.0" styleClass="hbox-header">
                              <!-- Contenu de l'entête -->
                              <Label style="-fx-padding: 0 0px" text="Type pack" />
                              <Label style="-fx-padding: 0 50px" text="NomPack" />
                              <ImageView fx:id="offreIconVert" fitHeight="16" fitWidth="16" />
                              <ImageView fx:id="offreIconRouge" fitHeight="16" fitWidth="16" />
                              <Label style="-fx-padding: 0 20px" text="Description" />
                              <Label style="-fx-padding: 0 40px" text="Prix" />
                              <Label style="-fx-padding: 0 40px" text="Date" />
                              <Label style="-fx-padding: 0 50px" text="Disponibilite" />
                              <Label style="-fx-padding: 0 120px" text="Image" />
                              <Label style="-fx-padding: 0 120px" text="Action" />
                           </HBox>
                           <!-- Barre de recherche -->
                           <HBox prefHeight="638.0" prefWidth="1316.0" styleClass="hbox-search">
                              <children>
                                 <ScrollPane prefHeight="628.0" prefWidth="1356.0">
                                    <VBox fx:id="pnItems" />
                                 </ScrollPane>
                              </children>
                           </HBox>
                           <!-- Bouton -->
                           <HBox prefHeight="40.0" prefWidth="1180.0" style="-fx-padding: 10px; -fx-alignment: center-right;" />
                        </VBox>
                     </children>
                  </AnchorPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </left>
   <top>
      <ToolBar BorderPane.alignment="CENTER">
         <!-- Ajoutez vos éléments de barre de navigation ici -->
         <Button onAction="#afficherPack" text="afficher Pack" />
         <Button onAction="#ajouterPack" text="ajouter Pack" />
         <Button onAction="#afficherCategorie" text="afficher categorie" />
         <Button onAction="#ajouterCategorie" text="ajouter categorie" />
         <Button onAction="#afficherTypePack" text="afficher type Pack" />
         <Button onAction="#ajouterTypePack" text="ajouter type Pack" />
      </ToolBar>
   </top>
</BorderPane>
