<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.AjoutProgrammeController"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="Description du programme" layoutX="20" layoutY="20" />
    <TextArea fx:id="descriptionTextArea" layoutX="150" layoutY="20" prefWidth="400" prefHeight="200" />

    <Label text="Durée du programme (en minutes)" layoutX="20" layoutY="240" />
    <TextField fx:id="dureeTextField" layoutX="210" layoutY="240" />

    <Label text="Prix du programme" layoutX="20" layoutY="280" />
    <TextField fx:id="prixTextField" layoutX="150" layoutY="280" />

    <Label text="Catégorie du programme" layoutX="20" layoutY="320" />
    <ChoiceBox fx:id="categorieChoiceBox" layoutX="180" layoutY="320" />

    <Button text="Sélectionner une image" layoutX="150" layoutY="360" onAction="#ajouterImage" />

    <!-- Ajout de l'ImageView pour afficher l'image -->
    <ImageView fx:id="imageView" layoutX="300" layoutY="360" fitWidth="100" fitHeight="100" />

    <Button text="Enregistrer" layoutX="250" layoutY="400" onAction="#ajouterProgramme" />

    <ToolBar layoutX="0" layoutY="0" prefWidth="600">
        <!-- Ajoutez vos éléments de barre de navigation ici -->
        <Button text="Afficher Pack" onAction="#afficherPack" />
        <Button text="Ajouter Pack" onAction="#ajouterPack" />
        <Button text="Afficher Catégorie" onAction="#afficherCategorie" />
        <Button text="Ajouter Catégorie" onAction="#ajouterCategorie" />
        <Button text="Afficher Type Pack" onAction="#afficherTypePack" />
        <Button text="Ajouter Type Pack" onAction="#ajouterTypePack" />
    </ToolBar>
</AnchorPane>
