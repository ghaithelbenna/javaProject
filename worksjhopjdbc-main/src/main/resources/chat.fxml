<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.ChatController">
    <TextArea fx:id="chatArea" editable="false" prefHeight="300"/>
    <TextField fx:id="messageField" onAction="#sendMessage" prefWidth="300"/>
    <Button text="Envoyer" onAction="#sendMessage"/>
</VBox>
