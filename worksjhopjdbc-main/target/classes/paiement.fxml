<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.PaiementController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10">
        <Label text="Paiement Professionnel" style="-fx-font-size: 18px;" />
        <Label text="Montant à payer :" />
        <Label fx:id="montantLabel" />
        <Label text="Informations de carte de crédit :" />
        <HBox spacing="10">
            <TextField fx:id="cardNumberField" promptText="Numéro de carte" />
            <TextField fx:id="expiryDateField" promptText="Date d'expiration (MM/YYYY)" />
            <TextField fx:id="cvvField" promptText="CVV" />
        </HBox>
        <Button text="Payer" onAction="#processPayment" />
        <Label fx:id="statusLabel" />
    </VBox>

</AnchorPane>
